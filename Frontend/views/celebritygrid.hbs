<!-- celebrity grid v1 section-->
<div class="page-single">
	<div class="container">
		<div class="row ipad-width2">
			<div class="col-md-9 col-sm-12 col-xs-12">
				<div class="topbar-filter">
					<div class="pagination2" style="padding:0">
					<span>Sort:</span>
					<a id="sortname" class="active" href="/celebrity?page={{page}}&number={{number}}&sort=name">Ascending names</a>
					<a id="sortnamedesc" href="/celebrity?page={{page}}&number={{number}}&sort=name desc">Descending names</a>
					<a id="sortheight" href="/celebrity?page={{page}}&number={{number}}&sort=height">Increasing Height</a>
					<a id="sortheightdesc" href="/celebrity?page={{page}}&number={{number}}&sort=height desc">Decreasing Height</a>
					</div>
				</div>
				<div class="celebrity-items">
					{{#each row}}
					<div class="ceb-item" style="max-width: 30%;">
						<a href="/celebrities?celebrity={{name}}"><img src="{{img}}" alt=""></a>
						<div class="ceb-infor">
							<h2><a href="/celebrities?celebrity={{name}}">{{name}}</a></h2>
							<span>{{profesion}}</span><br><span>{{Country}}</span>
						</div>
					</div>
					{{/each}}
				</div>
				<div class="topbar-filter">
					<div class="pagination2" style="padding:0">
                             <span>No. of Movies per Page:</span>
                            <a id="number6" href="/celebrity?page={{page}}&number=6&sort={{sor}}">6</a>
                            <a id="number9" href="/celebrity?page={{page}}&number=9&sort={{sor}}">9</a>
                            <a id="number12" href="/celebrity?page={{page}}&number=12&sort={{sor}}">12</a>
                            <a id="number15" href="/celebrity?page={{page}}&number=15&sort={{sor}}">15</a> 
                          </div> 
					       <div class="pagination2" style="padding:0">
                             <span>Page {{page}} : 6</span>
                            <a href="/celebrity?page={{minus page 1}}&number={{number}}&sort={{sor}}"><i class="ion-arrow-left-b"></i></a> 
                            <a id="page1" href="/celebrity?page=1&number={{number}}&sort={{sor}}">1</a>
                            <a id="page2" href="/celebrity?page=2&number={{number}}&sort={{sor}}">2</a>
                            <a id="page3" href="/celebrity?page=3&number={{number}}&sort={{sor}}">3</a>
                            <a id="page4" href="/celebrity?page=4&number={{number}}&sort={{sor}}">4</a>
                            <a id="page5" href="/celebrity?page=5&number={{number}}&sort={{sor}}">5</a>
                            <a id="page6" href="/celebrity?page=6&number={{number}}&sort={{sor}}">6</a> 
                            <a href="/celebrity?page={{add page 1}}&number={{number}}&sort={{sor}}"><i class="ion-arrow-right-b"></i></a> 
                          </div>
				</div>
			</div>
			<div class="col-md-3 col-xs-12 col-sm-12">
				<div class="sidebar">
						<div class="searh-form">
						<h4 class="sb-title">Search celebrity</h4>
						<form class="form-style-1 celebrity-form" method="post" action="/celebrity?">
							<div class="row">
								<div class="col-md-12 form-it">
									<label for="cname">Celebrity name</label>
									<input name="cname" type="text" placeholder="Enter keywords" value="{{name}}">
								</div>
								<div class="col-md-12 form-it">
									<label for="profesion">Profession</label>
									<select name="profesion">
									  <option value="">-- Select the rating range below --</option>
									  <option value="Actor">Actor</option>
									  <option value="Director">Director</option>
									  <option value="Producer">Producer</option>
									  <option value="Editor">Editor</option>
									</select>
								</div>
								<!-- <div class="col-md-12 form-it">
									<label>Year of birth</label>
