<div class="page-single userfav_list">
  <div class="container">
    <div class="row ipad-width2">
      <div class="col-md-3 col-sm-12 col-xs-12">
        <div class="user-information">
          <div class="user-img">
            <a href="{{Pic}}"><img loading="lazy" src={{Pic}} alt="user_pic" /><br /></a>
            <form action="/updateavatar" method="post" enctype="multipart/form-data">
              <input style="color: wheat;" type="file" name="avatar" />
			  <button class="redbtn" type="submit">Change avatar</button>
            </form>
          </div>
          <div class="user-fav">
            <p>Account Details</p>
            <ul>
              <li class="active"><a
                  id="profile"
                  href="#profile"
                >Profile</a></li>
              <li><a id="favoritelist" href="#favoritelist">Favorite movies</a></li>
            </ul>
          </div>
          <div class="user-fav">
            <p>Others</p> 
            <ul>
              {{{Logout}}}
            </ul>
          </div>
        </div>
      </div>
      <div class="tabs">
        <div id="favoritelist" class="col-md-9 col-sm-12 col-xs-12">
          {{!-- <div class="topbar-filter">
					<div class="pagination2" style="padding:0">
					<span>Sort:</span>
					<a id="sortname" class="active" href="/movielist?page={{page}}&number={{number}}&sort=name">Ascending names</a>
					<a id="sortnamedesc" href="/movielist?page={{page}}&number={{number}}&sort=name desc">Descending names</a>
					<a id="sortrating" href="/movielist?page={{page}}&number={{number}}&sort=rating">Increasing rating</a>
					<a id="sortratingdesc" href="/movielist?page={{page}}&number={{number}}&sort=rating desc">Decreasing rating</a>
					<a id="sorttime" href="/movielist?page={{page}}&number={{number}}&sort=time">Incresing Duration</a>
