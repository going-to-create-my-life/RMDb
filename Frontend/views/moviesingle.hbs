                        {{/eq}}
                      {{/each}}
                    </div>
                  </div>
                </div>
                <div id="media" class="tab">
                  <div class="row">
                    <div class="rv-hd">
                      <div>
                        <h3>Videos & Photos of</h3>
                        <h2>{{name}}</h2>
                      </div>
                    </div>
                    <div class="title-hd-sm">
                      <h4>Videos</h4>
                    </div>
                    <div class="mvsingle-item media-item">
                      {{#each videos}}
                        <div class="vd-item">
                          <div class="vd-it">
                            <img class="vd-img" src="{{Jawanv}}" alt="" />
                            <a
                              class="fancybox-media hvr-grow"
                              href="{{Jawanv}}"
                            ><img src="images/uploads/play-vd.png" alt="" /></a>
                          </div>
                          {{! <div class="vd-infor">
                          <h6> <a href="#">Trailer: Watch New Scenes</a></h6>
