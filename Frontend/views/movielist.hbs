<!-- BEGIN | PAGE TYPE -->
<div class="hero common-hero">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="hero-ct">
					<h1> movie listing - list</h1>
					<ul class="breadcumb">
						<li class="active"><a href="/">Home</a></li>
						<li> <span class="ion-ios-arrow-right"></span> movie listing</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- END | PAGE TYPE -->

<div class="page-single movie_list">
	<div class="container">
		<div class="row ipad-width2">
			<div class="col-md-8 col-sm-12 col-xs-12">
				<div class="topbar-filter">
					<div class="pagination2" style="padding:0">
					<span>Sort:</span>
					<a id="sortname" class="active" href="/movielist?page={{page}}&number={{number}}&sort=name">Ascending names</a>
					<a id="sortnamedesc" href="/movielist?page={{page}}&number={{number}}&sort=name desc">Descending names</a>
					<a id="sortrating" href="/movielist?page={{page}}&number={{number}}&sort=rating">Increasing rating</a>
					<a id="sortratingdesc" href="/movielist?page={{page}}&number={{number}}&sort=rating desc">Decreasing rating</a>
					<a id="sorttime" href="/movielist?page={{page}}&number={{number}}&sort=time">Incresing Duration</a>
					{{!-- <a id="number40" href="/movielist?page={{page}}&number={{number}}&sort=">Decreasing Duration</a>  --}}
					</div>
					<a href="movielist" class="list"><i class="ion-ios-list-outline active"></i></a>
					<a  href="moviegrid" class="grid"><i class="ion-grid"></i></a>
				</div>
				{{#each row}}
				<div class="movie-item-style-2">
					<img src="{{img}}" alt="">
					<div class="mv-item-infor">
						<h6><a href="/movies?movie={{name}}">{{name}}<span> ({{release}})</span></a></h6>
						<p class="rate"><i class="ion-android-star"></i><span>{{rating}}</span> /10</p>
						<p class="describe">{{truncate overview 100}}...</p>
						<p class="run-time"> Run Time: {{time}}    .     <span>IMDb: {{rating}}</span>    .     <span>Release: {{release}}</span></p>
						<p>Director: <a href="#">{{director}}</a></p>
						<p>Stars: {{stars}}</p>
					</div>
				</div>
				{{/each}}
				<div class="topbar-filter">
					<div class="pagination2" style="padding:0">
                             <span>No. of Movies per Page:</span>
                            <a id="number5" class="active" href="/movielist?page={{page}}&number=5&sort={{sor}}">5</a>
                            <a id="number10" href="/movielist?page={{page}}&number=10&sort={{sor}}">10</a>
                            <a id="number15" href="/movielist?page={{page}}&number=15&sort={{sor}}">15</a>
                            <a id="number20" href="/movielist?page={{page}}&number=20&sort={{sor}}">20</a>
                            <a id="number30" href="/movielist?page={{page}}&number=30&sort={{sor}}">30</a>
                            <a id="number40" href="/movielist?page={{page}}&number=40&sort={{sor}}">40</a> 
                          </div> 
					       <div class="pagination2" style="padding:0">
                             <span>Page {{page}} : 6</span>
                           	<a href="/movielist?page={{minus page 1}}&number={{number}}&sort={{sor}}"><i class="ion-arrow-left-b"></i></a> 
                            <a id="page1" href="/movielist?page=1&number={{number}}&sort={{sor}}">1</a>
                            <a id="page2" href="/movielist?page=2&number={{number}}&sort={{sor}}">2</a>
                            <a id="page3" href="/movielist?page=3&number={{number}}&sort={{sor}}">3</a>
                            <a id="page4" href="/movielist?page=4&number={{number}}&sort={{sor}}">4</a>
                            <a id="page5" href="/movielist?page=5&number={{number}}&sort={{sor}}">5</a>
                            <a id="page6" href="/movielist?page=6&number={{number}}&sort={{sor}}">6</a> 
                            <a href="/movielist?page={{add page 1}}&number={{number}}&sort={{sor}}"><i class="ion-arrow-right-b"></i></a> 
                          </div> 
				</div>
			</div>
			<div class="col-md-4 col-sm-12 col-xs-12">
				<div class="sidebar">
					<div class="searh-form">
						<h4 class="sb-title">Search for movie</h4>
						<form class="form-style-1" method="post" action="/movielist?">
							<div class="row">
								<div class="col-md-12 form-it">
									<label for="moviename">Movie name</label>
									<input name="moviename" type="text" placeholder="Enter keywords" value="{{name}}">
								</div>
								<div class="col-md-12 form-it">
									<label for="genres">Genres</label>
									<input name="genres" type="text" placeholder="Enter keywords" value="{{genres}}">
								</div>
								<div class="col-md-12 form-it">
									<label for="ott">OTT</label>
									<select name="ott">
									  <option value="">-- Select the rating range below --</option>
									  <option value="Net">Netflix</option>
									  <option value="Amazon Prime Video">Amazon Prime Video</option>
									  <option value="Disney Hotstar">Disney+Hotstar</option>
									  <option value="Theature">Theature</option>
									</select>
								</div>
								<div class="col-md-12 ">
									<input class="submit" type="submit" value="submit" />
								</div>
							</div>
						</form>
					</div>
					<div class="ads">
						<img src="images/uploads/ads1.png" alt="">
					</div>
					<div class="sb-facebook sb-it">
						<h4 class="sb-title">Find us on Facebook</h4>
						<iframe src="#" data-src="https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2Ftemplatespoint.net%2F%3Ffref%3Dts&tabs=timeline&width=340&height=315px&small_header=true&adapt_container_width=false&hide_cover=false&show_facepile=true&appId"  height="315" style="width:100%;border:none;overflow:hidden" ></iframe>
					</div>
					<div class="sb-twitter sb-it">
						<h4 class="sb-title">Tweet to us</h4>
						<div class="slick-tw">
							<div class="tweet item" id=""><!-- Put your twiter id here -->
							</div>
							<div class="tweet item" id=""><!-- Put your 2nd twiter account id here -->
							</div>
						</div>							
					</div>
				</div>
			</div>
		</div>
	</div>
</div>